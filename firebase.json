{
  "hosting": [
    {
      "target": "main-site",
      "public": "main-site",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "redirects": [
        {"source": "**", "destination": "https://about.ovapp.online", "type": 301}
      ],
      "headers": [
        {"source": "/404.html", "headers": [{"key": "Cache-control", "value": "no-cache"}] }
      ]
    },
    {
      "target": "about-site",
      "public": "about-site",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "redirects": [
        {"source": "**", "destination": "/sobre-nos.html", "type": 301}
      ],
      "rewrites": [
        {"source": "**", "destination": "/sobre-nos.html"}
      ]
    }
  ]
}