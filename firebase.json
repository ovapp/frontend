{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/homepage.html" 
      },
      {
        "source": "/login",
        "destination": "/onboarding.html"
      },
      {
        "source": "/signup",
        "destination": "/signup.html"
      },
      {
        "source": "**",
        "destination": "/404.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
